<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerHorizontal="true"
    android:paddingBottom="5dp"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/instancelayout"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="visible"
        android:layout_marginHorizontal="5dp"
        android:elevation="100dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/catimage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/serviceicon"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/catname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legalassmsg"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="10dp"
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/whatsnewlayout"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/civilcolor"
        android:visibility="gone"
        android:gravity="center"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="2dp"
        android:layout_marginHorizontal="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/whatsimage"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@drawable/civilicon"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"
                android:layout_margin="7dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/whatsimage"
                android:layout_alignParentBottom="true"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="1dp">

                <TextView
                    android:id="@+id/whatsname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Schoolbook"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/onlynamecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        android:layout_marginHorizontal="11dp"
        >
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="hello"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:textSize="13dp"
        android:layout_gravity="center"/>
        <TextView
            android:id="@+id/explorename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="hello"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/trendingadvocatelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:visibility="gone"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/advocateimage"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:src="@drawable/demoimageadvocate"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.4">
                        <TextView
                            android:layout_weight="1.2"
                            android:id="@+id/advocatename"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Adv. Annu Satija"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsbold"/>
                        <LinearLayout
                            android:id="@+id/pinglayout"
                            android:layout_weight=".2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_weight=".2"
                                android:id="@+id/pinadvocateimage"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/instantlegaladviceicon"
                                android:visibility="gone"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/notpingcard"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                app:cardCornerRadius="44dp"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                app:cardElevation="2dp"
                                android:visibility="invisible">
                                <ImageView
                                    android:layout_weight=".2"
                                    android:id="@+id/notpingimage"
                                    android:layout_width="15dp"
                                    android:layout_height="12dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/notpingtrendingadvocateicon"/>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/exp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experience-5yrs"
                        android:textSize="10dp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsmedium"/>

                    <TextView
                        android:id="@+id/courtname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="courtname"
                        android:textSize="10dp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsmedium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_weight=".5"
                            android:id="@+id/viewprofile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/profileview"
                            android:textColor="@color/red"
                            android:textSize="8dp"
                            android:background="@drawable/selectlanguageborder"
                            android:padding="10dp"
                            android:textAlignment="center"
                            />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="0dp"/>
                        <TextView
                            android:layout_weight=".5"
                            android:id="@+id/profilecontibutton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/signbutton"
                            android:elevation="10dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/contibutton"
                            android:textColor="@color/white"
                            android:textSize="8dp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>