<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/homepagebackdesign"
        android:elevation="10dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_horizontal"
            android:text="@string/feedmsg"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/backarrow"
android:layout_marginBottom="3dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
         android:layout_centerVertical="true"
            android:elevation="20dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/backarrow"
                app:tint="@color/red" />

        </androidx.cardview.widget.CardView>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/proceedbutton"
       android:layout_below="@+id/header">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp">
            <TextView
                android:id="@+id/titlee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/videoquality"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"/>

            <RatingBar
                android:id="@+id/videoratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/ratingcolor"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_gravity="center_vertical"
                android:rating="4"
                android:layout_marginTop="3dp"
                android:layout_below="@id/titlee"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp">
            <TextView
                android:id="@+id/titleeee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/audioquality"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"/>

            <RatingBar
                android:id="@+id/audioratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/ratingcolor"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_gravity="center_vertical"
                android:rating="4"
                android:layout_marginTop="3dp"
                android:layout_below="@id/titleeee"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/suggentiontitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/suggestion"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/suggestiontxt"
                android:layout_below="@id/suggentiontitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/suggenstionback"
                android:hint="@string/hintmsg"
                android:paddingBottom="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/suggestiontxt"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/proceedbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/signbutton"
        android:elevation="10dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/proceed"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>