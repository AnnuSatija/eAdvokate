<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignInActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_above="@id/centercard"
        android:layout_centerHorizontal="true"
        android:src="@drawable/applogo"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/centercard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="50dp"
        android:background="@drawable/edittextback">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:alpha="0.5"
                android:src="@drawable/profileregistrationicon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="10dp"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextback"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat"
                android:hint="Enter your full name"
                android:padding="10dp"
                android:textSize="15dp"
                android:imeOptions="actionNext"
                android:inputType="text"/>

            <EditText
                android:id="@+id/mobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextback"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat"
                android:hint="Mobile Number"
                android:padding="10dp"
                android:textSize="15dp"
                android:inputType="number"
                android:maxLength="10"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/emailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextback"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat"
                android:hint="Email Address"
                android:padding="10dp"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/montserrat"
                android:padding="5dp"
                android:text="@string/signintext"
                android:textSize="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/englishtxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittextback"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="English"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/hinditxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittextback"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="हिन्दी"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/policycheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/term"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/privacypolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_policy"
                    android:textSize="12dp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <TextView
                android:id="@+id/registrationtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/signbutton"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/letsstarttext"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/regismsg" />

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="@color/red"
                    android:layout_marginLeft="3dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>