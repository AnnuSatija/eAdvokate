                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/advocatetitle"
                android:textColor="@color/black"
                android:textSize="12dp" />

