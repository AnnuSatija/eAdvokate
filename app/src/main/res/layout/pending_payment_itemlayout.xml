<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/pendingPaymentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.5"
            android:padding="10dp">
            <TextView
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/serviceNametxt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="servicename"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.5"
                android:padding="10dp">
                <TextView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amounttxt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="amount"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.5"
                android:padding="10dp">
                <TextView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Request Date"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/requestdate"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="requestdate"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                
                <androidx.cardview.widget.CardView
                 android:id="@+id/acceptcard"
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 app:cardBackgroundColor="@color/successcolor"
                 app:cardCornerRadius="6dp">
                 <TextView
                     android:text="Accept"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="10dp"
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:layout_gravity="center"/>
             </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cancelcard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="6dp"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:text="Cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                
            </RelativeLayout>
            
            

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/allPaymentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/allPaymentorderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Review Document 1"
                android:textColor="@color/reviewdoccolor"
                android:textColorHint="@color/reviewdoccolor"
                android:textSize="15dp"
                android:padding="5dp"
                android:fontFamily="@font/poppinsmedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:id="@+id/allPaymentamount"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Amount-234"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppinsmedium"/>
                <TextView
                    android:id="@+id/allPaymentstatus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Status-closed"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"/>

            </LinearLayout>

            <TextView
                android:id="@+id/allPaymentservicename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Service - 0168dgbd"
                android:padding="5dp"
                android:textSize="12dp"
                android:textColor="@color/greydark"
                android:fontFamily="@font/poppinsmedium"/>

            <TextView
                android:id="@+id/allPaymenttxndate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Txn Date -"
                android:padding="5dp"
                android:textSize="12dp"
                android:textColor="@color/greydark"
                android:fontFamily="@font/poppinsmedium"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>